<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>Fwitter</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">

  </head>

  <body>
    <nav>
      <a button type="button" class="navbtn btn btn-default" href="/tweets">Messages</a>
      <a button type="button" class="navbtn btn btn-default" href="/tweets/new">New Message</a>
      <% if logged_in? %>
        <a button type="button" class="navbtn btn btn-default" href="/users/<%= current_user.slug %>">User Info</a>
        <a button type="button" class="navbtn btn btn-default" href="/logout">Log Out</a>
      <% else %>
        <a button type="button" class="navbtn btn btn-default" href="/login">Log In</a>
        <a button type="button" class="navbtn btn btn-default" href="/signup">Sign Up</a>
      <% end %>
    </nav>

    <%= yield %>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.js"></script>

  </body>
</html>
